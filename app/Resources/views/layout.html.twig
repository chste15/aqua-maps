                        <div class="col-xs-2" > 
                            <br>


                            <div class="well" style="margin:10px;padding:30px 5px 30px 5px;min-width: 260px; min-height: 520px">

                    {{ render(controller("CleanWaterMapBundle:Map:listeCommentaires")) }}

